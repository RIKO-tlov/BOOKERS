<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<h4>Title</h4>
<p class="text-box"><%= f.text_field :title %></p>
<h4>Body</h4>
<p class="text-box"><%= f.text_area :body %></p>
<p><%= f.submit 'Update Book' %></p>
<p class="button"><%= link_to "show", book_path %> | <%= link_to "Back", '/books' %></p>
<% end %>