<p class="notice"><%= flash[:notice] %></p>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></th>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
  <div class="error-explanation">
    <p class="cation"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <% @book.errors.full_messages.each do |message| %>
    <ul>
      <li><%= message %></li>
    </ul>
  <% end %>
  </div>
<% end %>
<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<p class="text-box"><%= f.text_field :title %></p>

<h4>Body</h4>
<p class="text-box"><%= f.text_area :body %></p>

<p><%= f.submit 'Create Book' %></p>

<% end %>




