<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>show</td>
      <td>edit</td>
      <td>destroy</td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

<h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>




